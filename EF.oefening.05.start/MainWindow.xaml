<Window x:Class="EF.oefening._05.start.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EF.oefening._05.start"
        mc:Ignorable="d"
                
        Title="Kunstwerkcatalogus" Height="450" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" FontSize="18">
    <Grid>
        <Label Content="KUNSTWERKCATALOGUS" FontSize="28" HorizontalContentAlignment="Stretch" VerticalAlignment="Top" Margin="0,30,0,0" HorizontalAlignment="Center"/>

        <GroupBox Header="Kunstwerken" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,90,0,0" Width="400" Height="300">
            <ListBox x:Name="LstWerken" Margin="10,10,10,10"/>
        </GroupBox>

        <Button x:Name="BtnNieuw" Content="Nieuw" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="460,105,0,0" Width="100"/>

        <Label x:Name="LblAantalWerken" Content="0" HorizontalAlignment="Left" Margin="460,220,0,0" VerticalAlignment="Top" Width="100" HorizontalContentAlignment="Right"/>

        <Button x:Name="BtnAfsluiten" Content="Afsluiten" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="460,360,0,0" Width="100"/>
    </Grid>
</Window>